'''
#Problem 2.5 (ii)
from math import *
from numpy import *
def f(x):
    return exp(-x)
def trapez(a,b,n):
    if n<1 or a>b:
        print('Error! Wrong choosen range')
    else:
        h=(b-a)/n
        s=(f(a)+f(b))/2
        for i in range(1,n):
            x=a+i*h
            s=s+f(x)
        return s*h
def simpson(a,b,n):
    if n<1 or a>b:
        print('Error! Wrong range')
    elif n%2==1:
        print('N is not a even number')
    else:
        h=(b-a)/n
        s=f(a)+f(b)
        for i in range(1,n):
            coefficient=2*(i%2+1)
            x=a+i*h
            s=s+coefficient*f(x)
    return s*h/3.0
a=0
b=1
stem=1-1/e
n=2
print('N ', 'Trapazoidal error','Simpson error')
for i in range(3):
    n=n*2
    print(n,'%.10f' % (trapez(a, b, n)-stem),'%.10f' % (simpson(a, b, n)-stem) )
