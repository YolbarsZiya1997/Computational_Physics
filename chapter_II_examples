'''
from pylab import *
from numpy import *
from math import *

def f(x,v,t):
    return -c*abs(v)**2

c=3*10**8
n=20
h=6.28*10/float(n)
t=zeros(n,float)
x=zeros(n,float)
v=zeros(n,float)
v[0]=1.0

for i in range(1,n):
    t[i]=h*i
    x[i]=v[i-1]*h+x[i-1]
    v[i]=f(x[i-1],v[i-1],t[i-1])*h+v[i-1]
    
plot(t,x,'k-')
plot(t,v,'k--')
xlabel('t')
ylabel('velocity and displacement')
show()
