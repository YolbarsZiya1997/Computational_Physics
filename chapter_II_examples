#Soru 2.2
'''
# Soru 2.2 (a)
from math import *
from numpy import *

def f(x):
    return cos(pi*x)
def f2(x):
    return -1*(pi**2)*cos(pi*x)

h=0.0001
x=0.5
f2_simetrik = (f(x+h)-2*f(x)+f(x-h))/h**2
f2_ileri = ((f(x)-2*f(x+h)+f(x+2*h))/h**2)
f2_tam = f2(x)

print('%.10f' % f2_simetrik , '%.10f' % f2_ileri, '%.10f' % f2_tam)
