from numpy import *
def f(x):
    return 3*x*exp(x)-cos(x)
def f2(x):
    return cos(x)+(3*x+6)*exp(x)

x=1.3
h=0.001

f2_simetrik = (f(x+h)-2*f(x)+f(x-h))/h**2
f2_ileri = (f(x)-2*f(x+h)+f(x+2*h))/h**2
