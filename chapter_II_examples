from numpy import *
def f(x):
    return x*cos(x)-x**2*sin(x)
def f1(x):
    return (1-x**2)*cos(x)-3*x*sin(x)

print('İleri Yöntem '+'Geri Yöntem '+'Tam değer')

h=0.001
x=3
f1_ileri = (f(x+h)-f(x))/h
f1_geri = (f(x)-f(x-h))/h
f1_tam = f1(x)
print('%.10f' % f1_ileri, '%.10f' % f1_geri, '%.10f' % f1_tam)
