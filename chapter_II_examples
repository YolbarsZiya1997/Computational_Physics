#2.1 soru(a)
from math import *
from numpy import *
def f(x):
    return x*log(x)
def f1(x):
    return log(x)+1

print('İleri Yöntem ','Geri Yöntem ','Tam değer ','Adım aralığı')
h = 0.001
for i in range(8):
    x=float(i+1)
    f1_ileri = (f(x+h)-f(x))/h
    f1_geri = (f(x)-f(x-h))/h
    f1_tam = f1(x)
    print('%.10f' % f1_ileri, '%.10f' % f1_geri, '%.10f' % f1_tam, '%.10f' % h )
    h=h/10.0
'''
